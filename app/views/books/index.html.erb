

  <body>
    <header>
      <h1 class="Books">Books
        <table>
          <th>Title</th>
          <th>Body</th>
          <th colspan"3"></th>
          <% @book.each do |b| %>
          <tr>
            <td><%= b.title %></td>
            <td><%= b.body %>	</td>
            <td></td>
            <td><%= link_to "show", book_path(b.id) %></td>
            <td><%= link_to "edit", edit_book_path(b.id) %></td>
            <td><%= link_to "delete", book_path(b.id), method: :delete %></td>
          </tr>
          <% end %>
        </table>
      </h1>
    </header>
    <h2>New book</h2>
    <%= form_for(@booknew) do |f| %>

      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Body</h4>
      <%= f.text_area :body %>
      <%= f.submit "Create Book" %>

    <% end %>

  </body>
